<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:BlogWriter.Wpf.Converters"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Boolean x:Key="True">True</sys:Boolean>
    <sys:Boolean x:Key="False">False</sys:Boolean>

    <c:BooleanToVisibilityConverter x:Key="BooleanToCollapsed" />
    <c:IsNullConverter x:Key="IsNullConverter" />
    <c:IsNotNullConverter x:Key="IsNotNullConverter" />
    <c:VisibleIfNullConverter x:Key="VisibleIfNullConverter" />
    <c:VisibleIfNotNullConverter x:Key="VisibleIfNotNullConverter" />

</ResourceDictionary>